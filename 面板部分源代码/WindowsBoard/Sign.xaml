<Window x:Class="WindowsBoard.Sign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsBoard"
        mc:Ignorable="d"
        Title="Sign" Height="500" Width="80" ResizeMode="NoResize" ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Window.Effect>
        <DropShadowEffect BlurRadius="10" Color="#993f3f3f" Direction="0" ShadowDepth="0" />
    </Window.Effect>
    <Grid x:Name="grid"  Width="70" Height="70" VerticalAlignment="Top" HorizontalAlignment="Center" >
    <Ellipse Margin="10,10,10,10" Fill="{Binding color}"/>
        <Image Margin="10,10,10,10" Width="28" Height="32" Source="{Binding icon}"/>
    </Grid>
</Window>
